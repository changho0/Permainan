-- WindUI loader
local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

local started = false
local function StartMain()
    if started then return end
    started = true
    -- YOUR CODE
end

WindUI.Services.junkiedevelopment = {
    Name = "Junkie Development",
    Icon = "shield-check",
    Args = { "ServiceId", "ApiKey", "Provider" },

    New = function(ServiceId, ApiKey, Provider)
        JunkieProtected.SERVICE_ID = ServiceId
        JunkieProtected.API_KEY    = ApiKey
        JunkieProtected.PROVIDER   = Provider

        local function Verify(key)
            local km = JunkieProtected.IsKeylessMode and JunkieProtected.IsKeylessMode() or nil
            local keyless = (type(km) == "table" and km.keyless_mode) 
            if keyless then
                task.defer(StartMain)
                return true, "Keyless mode"
            end
            if not key or key == "" then
                return false, "No key provided"
            end
            local r = JunkieProtected.ValidateKey and JunkieProtected.ValidateKey({ Key = key })
            local ok = r == "valid"
            if ok then
                task.defer(StartMain)
                return true, "Key valid"
            else
                return false, "Invalid key"
            end
        end

        local function Copy()
            local link = (JunkieProtected.GetKeyLink and JunkieProtected.GetKeyLink()) or "No link"
            if setclipboard then setclipboard(link) end
            return link
        end

        return { Verify = Verify, Copy = Copy }
    end
}

local Window = WindUI:CreateWindow({
    Title = "JinHub",
    Theme = "Dark",
    Transparent = true,
    Resizable = true,

    KeySystem = {
        Note = "Enter your key to continue.",
        SaveKey = true,
        API = {
            {
                Title = "JinHub Key",
                Desc  = "Click to copy link",
                Icon  = "key-round",
                Type  = "junkiedevelopment",
                ServiceId = "JinHub GetKey",
                ApiKey    = "4a66e74d-9e84-4e75-9c1d-306253968b7b",
                Provider  = "Work.Ink",
            }
        }
    }
})

